<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_episode_linearLayout"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#E8F1D3"
    android:orientation="vertical">

        <TextView
            android:layout_margin="2dp"
            android:id="@+id/episode_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="2dp"
            android:id="@+id/episode_number_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/episode_air_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="2dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/episode_characters_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>